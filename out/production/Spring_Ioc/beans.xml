<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="helloWorld" class="com.ioc.test.HelloWorld" scope="prototype"></bean>
    <bean id="userDao" class="com.ioc.test.dao.UserDao"></bean>
    <bean id="userService" class="com.ioc.test.service.UserService">
        <property name="userDao" ref="userDao"></property>
    </bean>
    <bean id="userAction" class="com.ioc.test.action.UserAction">
        <property name="userService" ref="userService"></property>
    </bean>
</beans>